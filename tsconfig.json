{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "dom",
         "es2015",
         "es2016",
         "es2017",
         "es2018"
      ],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop":true,
      "resolveJsonModule": true,
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "typeRoots": ["./src/types", "./node_modules/@types"],
   }
}